{% extends 'base.html.twig' %}

{% block title %} Détails Article {% endblock %}

{% block body %}
<style>
   
    .img1{
        width: 200px;
    }
</style>

<div class="example-wrapper">
    <h1> Détails Article </h1>
</div>
<div class="container">
    <div class="img-fluid">
        {# <img src="{{article.image}}" alt="{{ article.title }}"> #}
        <img class="img1" src="{{ asset('/images/articles/' ~ article.image) }}" class="card-img-top" alt="{{ article.title }}">
    </div>
    <div class="content">
        <p class="date">Ecrit le {{ article.createdAt | date("d/m/y") }} à {{ article.createdAt | date("H:m") }}</p>
        <h5 class="title"> {{article.title }}</h5>
        <p class="content">{{ article.content | raw }}</p>
    </div>
</div>
{% endblock %}